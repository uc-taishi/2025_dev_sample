{
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",

    "prisma:gen": "prisma generate --schema ${PRISMA_SCHEMA:-prisma/sqlite/schema.prisma}",
    "prisma:migrate:deploy": "prisma migrate deploy --schema ${PRISMA_SCHEMA:-prisma/sqlite/schema.prisma}",
    "prisma:studio": "prisma studio --schema ${PRISMA_SCHEMA:-prisma/sqlite/schema.prisma}",
    "db:seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "db:reset": "rimraf prisma/dev.db && prisma migrate reset --force --skip-seed --schema ${PRISMA_SCHEMA:-prisma/sqlite/schema.prisma} && npm run db:seed"
  },
  "prisma": {
    "seed": "npm run db:seed"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.4.0",
    "ts-node": "^10.9.2",
    "rimraf": "^5.0.5",
    "prisma": "^5.18.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.8"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "next": "15.1.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "engines": { "node": ">=20" }
}
